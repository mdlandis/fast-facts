<p class="fields">

  <%= f.label :fact_text, "Fact" %><br />
  <%= f.text_area :fact_text %>
  <br>

  <%= f.label :notes, "Notes" %><br />
  <%= f.text_area :notes %>

  <br>

  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", "javascript:void(0);", :id=>"remove_link" %>

  <%= f.fields_for :tags do |tag| %>
      <%= render 'tag_fields', f: tag  %>
  <% end %>
  <%= link_to_add_association 'add tag', f, :tags %>
</p>

