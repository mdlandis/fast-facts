<%= form_for(@fact) do |f| %>
  <% if @fact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fact.errors.count, "error") %> prohibited this fact from being saved:</h2>

      <ul>
      <% @fact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :fact_text, "Fact" %><br />
    <%= f.text_area :fact_text, :cols => "100", :rows => "5" %><br />

    <%= f.label :page, "Page" %><br />
    <%= f.text_field :page %><br />

    <%= f.label :notes, "Notes" %><br />
    <%= f.text_area :notes, :cols => "100", :rows => "3" %><br />

    <%= f.fields_for :tags do |tag| %>
        <%= render 'tag_fields', f: tag  %>
    <% end %>


    <%= link_to_add_fields "Add Tag", f, :tags, class: "btn btn-xs btn-info" %><br /><hr />



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
